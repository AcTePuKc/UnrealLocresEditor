<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styles="clr-namespace:Avalonia.Styling;assembly=Avalonia.Base"
             xmlns:local="clr-namespace:UnrealLocresEditor"
             x:Class="UnrealLocresEditor.App"
             RequestedThemeVariant="Dark">

	<Application.Styles>
		<FluentTheme />
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
	</Application.Styles>

	<Application.Resources>
		<ResourceDictionary>

			<SolidColorBrush x:Key="SystemAccentBrush" Color="{DynamicResource SystemAccentColor}" />

			<ResourceDictionary.ThemeDictionaries>

				<!-- PURPLE (THE OG THEME) -->
				<!-- CHANGED: Now uses the custom "Purple" key instead of "Default" -->
				<ResourceDictionary x:Key="{x:Static local:App.Purple}">
					<Color x:Key="BackgroundColor">#1A1625</Color>
					<Color x:Key="TextColor">#E8E3FF</Color>
					<Color x:Key="ButtonColor">#7C3AED</Color>
					<Color x:Key="ButtonTextColor">#FFFFFF</Color>
					<Color x:Key="SecondaryButtonColor">#C4B5FD</Color>
					<Color x:Key="SecondaryButtonTextColor">#1A1625</Color>
					<Color x:Key="BorderColor">#8B5CF6</Color>
					<Color x:Key="TertiaryColor">#2D1B4E</Color>
					<Color x:Key="BorderBackgroundColor">#3C2A5C</Color>
					<Color x:Key="WarningTextColor">#FBBF24</Color>
					<Color x:Key="SettingsTextColor">#A78BFA</Color>
					<Color x:Key="MenuHoverColor">#5B21B6</Color>
					<Color x:Key="SystemAccentColor">#A855F7</Color>
					<Color x:Key="DataGridHeaderColor">#4C1D95</Color>
					<Color x:Key="DataGridAlternateRowColor">#231836</Color>
				</ResourceDictionary>

				<!-- DARK -->
				<ResourceDictionary x:Key="{x:Static styles:ThemeVariant.Dark}">
					<Color x:Key="BackgroundColor">#0B0714</Color>
					<Color x:Key="TextColor">#F1F5F9</Color>

					<Color x:Key="ButtonColor">#4F46E5</Color>
					<Color x:Key="ButtonTextColor">#FFFFFF</Color>

					<Color x:Key="SecondaryButtonColor">#111827</Color>
					<Color x:Key="SecondaryButtonTextColor">#E5E7EB</Color>

					<Color x:Key="BorderColor">#1F2937</Color>
					<Color x:Key="TertiaryColor">#020617</Color>
					<Color x:Key="BorderBackgroundColor">#111827</Color>

					<Color x:Key="WarningTextColor">#FBBF24</Color>
					<Color x:Key="SettingsTextColor">#E5E7EB</Color>
					<Color x:Key="MenuHoverColor">#1F2937</Color>

					<Color x:Key="SystemAccentColor">#6366F1</Color>
					<Color x:Key="DataGridHeaderColor">#0F172A</Color>
					<Color x:Key="DataGridAlternateRowColor">#020617</Color>
				</ResourceDictionary>

				<!-- LIGHT -->
				<ResourceDictionary x:Key="{x:Static styles:ThemeVariant.Light}">
					<Color x:Key="BackgroundColor">#FFFFFF</Color>
					<Color x:Key="TextColor">#1A1625</Color>
					<Color x:Key="ButtonColor">#7C3AED</Color>
					<Color x:Key="ButtonTextColor">#FFFFFF</Color>
					<Color x:Key="SecondaryButtonColor">#E0D9FD</Color>
					<Color x:Key="SecondaryButtonTextColor">#1A1625</Color>
					<Color x:Key="BorderColor">#7C3AED</Color>
					<Color x:Key="TertiaryColor">#F3F0FF</Color>
					<Color x:Key="BorderBackgroundColor">#DDD6F3</Color>
					<Color x:Key="WarningTextColor">#B45309</Color>
					<Color x:Key="SettingsTextColor">#6B21A8</Color>
					<Color x:Key="MenuHoverColor">#DDD6F3</Color>
					<Color x:Key="SystemAccentColor">#9333EA</Color>
					<Color x:Key="DataGridHeaderColor">#EDE9FE</Color>
					<Color x:Key="DataGridAlternateRowColor">#F5F3FF</Color>
				</ResourceDictionary>

				<!-- COOL GRAY -->
				<ResourceDictionary x:Key="{x:Static local:App.CoolGray}">
					<Color x:Key="BackgroundColor">#2B2E38</Color>
					<Color x:Key="TextColor">#ECECEC</Color>
					<Color x:Key="ButtonColor">#5C6BC0</Color>
					<Color x:Key="ButtonTextColor">#FFFFFF</Color>
					<Color x:Key="SecondaryButtonColor">#393C47</Color>
					<Color x:Key="SecondaryButtonTextColor">#ECECEC</Color>
					<Color x:Key="BorderColor">#646A7A</Color>
					<Color x:Key="TertiaryColor">#252730</Color>
					<Color x:Key="BorderBackgroundColor">#454955</Color>
					<Color x:Key="WarningTextColor">#FBBF24</Color>
					<Color x:Key="SettingsTextColor">#ECECEC</Color>
					<Color x:Key="MenuHoverColor">#40444C</Color>
					<Color x:Key="SystemAccentColor">#5C6BC0</Color>
					<Color x:Key="DataGridHeaderColor">#393C47</Color>
					<Color x:Key="DataGridAlternateRowColor">#252730</Color>
				</ResourceDictionary>

			</ResourceDictionary.ThemeDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>